<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankingsystem.controllers.LoginController">
   <children>
      <!-- Background -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#fff3b0" height="400.0" stroke="TRANSPARENT" strokeType="INSIDE" width="600.0" />
      
      <!-- Main Content Container -->
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
         <children>
            <!-- Left Side - Branding -->
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="282.0" spacing="20.0" style="-fx-background-color: #ffd166; -fx-background-radius: 0 30 30 0;">
               <children>
                  <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Lekgwere" wrappingWidth="200.0">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Text>
                  <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Banking System" wrappingWidth="200.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
                  <ImageView fitHeight="99.0" fitWidth="92.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../Pictures/Objects%20tsa%20java/giraffe-silhouette.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            
            <!-- Right Side - Login Form -->
            <VBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="300.0" spacing="25.0">
               <padding>
                  <Insets left="40.0" right="40.0" />
               </padding>
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome Back" wrappingWidth="220.0">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Text>
                        <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign in to your account" wrappingWidth="220.0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
                  
                  <!-- Login Form -->
                  <VBox spacing="20.0">
                     <children>
                        <!-- Username Field -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Username" textFill="#333333">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="220.0" promptText="Enter your username" style="-fx-background-radius: 5; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <!-- Password Field -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Password" textFill="#333333">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="txtPassword" prefHeight="35.0" prefWidth="220.0" promptText="Enter your password" style="-fx-background-radius: 5; -fx-border-radius: 5;" />
                           </children>
                        </VBox>
                        
                        <!-- Login Button -->
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #ff9e00; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-weight: bold;" text="Sign In" />
                     </children>
                  </VBox>
                  
                  <!-- Footer Note -->
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="#999999" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Credentials:" wrappingWidth="220.0">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Text fill="#999999" strokeType="OUTSIDE" strokeWidth="0.0" text="Username: admin | Password: admin123" wrappingWidth="220.0">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
