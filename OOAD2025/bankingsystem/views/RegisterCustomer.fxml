<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="815.0" prefWidth="706.0" style="-fx-background-color: #fff3b0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankingsystem.controllers.RegisterCustomerController">
   
   <stylesheets>
      <URL value="@../css/dashboard.css" />
   </stylesheets>

   <children>
      <!-- Header -->
      <Pane prefHeight="70.0" prefWidth="700.0" style="-fx-background-color: #D2B48C; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);">
         <children>
            <Text fill="#5D4037" layoutX="250.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Register New Customer">
               <font>
                  <Font name="Segoe UI Bold" size="20.0" />
               </font>
            </Text>
            <ImageView fitHeight="45.0" fitWidth="45.0" layoutX="30.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../Downloads/elephant-head.png" />
               </image>
            </ImageView>
            <Button layoutX="600.0" layoutY="20.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #5D4037; -fx-border-color: #5D4037; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-width: 70; -fx-pref-height: 30;" text="Back" />
         </children>
      </Pane>

      <!-- Main Form -->
      <VBox layoutX="100.0" layoutY="100.0" prefWidth="500.0" spacing="25.0">
         <children>
            <!-- Title -->
            <Text fill="#5D4037" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Customer Registration">
               <font>
                  <Font name="Segoe UI" size="24.0" />
               </font>
            </Text>
            <!-- Personal Details Section -->
            <VBox spacing="15.0">
               <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold; -fx-font-size: 16px;" text="Personal Details" />
               
                     <HBox spacing="15.0">
                  <children>
                     <VBox prefWidth="120.0" spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Title:" />
                        <ComboBox fx:id="cmbTitle" prefHeight="35.0" prefWidth="120.0" promptText="Select Title" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>
                     <VBox prefWidth="330.0" spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Customer ID:" />
                        <TextField fx:id="txtCustomerId" prefHeight="35.0" prefWidth="330.0" promptText="Enter unique customer ID" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>
                  </children>
               </HBox>

               <HBox spacing="15.0">
                  <children>
                     <VBox prefWidth="225.0" spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="First Name:" />
                        <TextField fx:id="txtFirstName" prefHeight="35.0" prefWidth="225.0" promptText="First name" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>
                     <VBox prefWidth="225.0" spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Surname:" />
                        <TextField fx:id="txtSurname" prefHeight="35.0" prefWidth="225.0" promptText="Surname" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>
                  </children>
               </HBox>

               <VBox spacing="5.0">
                  <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Address:" />
                  <TextField fx:id="txtAddress" prefHeight="35.0" prefWidth="450.0" promptText="Full residential address" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
               </VBox>
            </VBox>

            <!-- Form Container -->
            <VBox spacing="20.0" style="-fx-background-color: rgba(210, 180, 140, 0.3); -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>

                  <!-- Account Details Section -->
                  <VBox spacing="15.0">
                     <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold; -fx-font-size: 16px;" text="Account Details" />
                     
                     <VBox spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Username:" />
                        <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="450.0" promptText="Choose username for login" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>

                     <VBox spacing="5.0">
                        <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Password:" />
                        <PasswordField fx:id="txtPassword" prefHeight="35.0" prefWidth="450.0" promptText="Set secure password" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </VBox>

                     <HBox spacing="15.0">
                        <children>
                           <VBox prefWidth="225.0" spacing="5.0">
                              <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Account Type:" />
                              <ComboBox fx:id="cmbAccountType" prefHeight="35.0" prefWidth="225.0" promptText="Select Type" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                           </VBox>
                           <VBox prefWidth="225.0" spacing="5.0">
                              <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Initial Balance (P):" />
                              <TextField fx:id="txtInitialBalance" prefHeight="35.0" prefWidth="225.0" promptText="0.00" style="-fx-background-color: white; -fx-border-color: #D2B48C; -fx-border-radius: 5; -fx-background-radius: 5;" />
                           </VBox>
                        </children>
                     </HBox>
                  </VBox>
               </children>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnRegister" onAction="#handleRegister" style="-fx-background-color: #D2B48C; -fx-text-fill: #5D4037; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 150; -fx-pref-height: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" text="Register Customer" />
                  <Button onAction="#handleClear" style="-fx-background-color: transparent; -fx-text-fill: #5D4037; -fx-border-color: #5D4037; -fx-border-radius: 8; -fx-background-radius: 8; -fx-pref-width: 100; -fx-pref-height: 40;" text="Clear Form" />
               </children>
            </HBox>

            <!-- Feedback Label -->
            <Label fx:id="lblFeedback" prefWidth="450" style="-fx-text-fill: #5D4037; -fx-font-weight: bold; -fx-alignment: center;" />
         </children>
      </VBox>

      <!-- Wildlife Decorations -->
      <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="550.0" layoutY="400.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../Downloads/zebra-pattern.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
