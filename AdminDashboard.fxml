<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.controllers.AdminDashboardController"
            prefHeight="600.0" prefWidth="700.0"
            stylesheets="@style.css"
            style="-fx-background-color: #fff3b0;">
   
   <children>
      <!-- Header -->
      <Pane prefHeight="70.0" prefWidth="800.0" styleClass="header">
         <children>
            <Text layoutX="250.0" layoutY="40.0"
                  text="Lekgwere Banking System - Admin"
                  styleClass="header-text"/>
         </children>
      </Pane>

      <!-- Main Content -->
      <VBox layoutX="50.0" layoutY="100.0" prefWidth="700.0" spacing="30.0">
         <children>
            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="10.0">
               <Text text="Admin Dashboard"
                     style="-fx-fill: #5D4037; -fx-font-weight: bold;">
                  <font>
                     <Font name="Segoe UI" size="28.0"/>
                  </font>
               </Text>
               <Label text="Manage banking operations securely"
                      style="-fx-text-fill: #5D4037; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Statistics Cards -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox prefWidth="200" spacing="10.0"
                        style="-fx-background-color: rgba(210,180,140,0.5); -fx-background-radius: 10; -fx-padding: 20;">
                     <Label fx:id="lblTotalCustomers"
                            text="0"
                            style="-fx-text-fill: #5D4037; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                     <Label text="Total Customers"
                            style="-fx-text-fill: #5D4037; -fx-font-weight: bold;"/>
                  </VBox>

                  <VBox prefWidth="200" spacing="10.0"
                        style="-fx-background-color: rgba(210,180,140,0.5); -fx-background-radius: 10; -fx-padding: 20;">
                     <Label fx:id="lblPendingApprovals"
                            text="0"
                            style="-fx-text-fill: #FF9800; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                     <Label text="Pending Approvals"
                            style="-fx-text-fill: #5D4037; -fx-font-weight: bold;"/>
                  </VBox>

                  <VBox prefWidth="200" spacing="10.0"
                        style="-fx-background-color: rgba(210,180,140,0.5); -fx-background-radius: 10; -fx-padding: 20;">
                     <Label fx:id="lblTotalAccounts"
                            text="0"
                            style="-fx-text-fill: #5D4037; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                     <Label text="Total Accounts"
                            style="-fx-text-fill: #5D4037; -fx-font-weight: bold;"/>
                  </VBox>
               </children>
            </HBox>

            <!-- Actions -->
            <VBox spacing="15.0">
               <Label text="Administrative Actions"
                      style="-fx-text-fill: #5D4037; -fx-font-weight: bold; -fx-font-size: 20px;"/>

               <HBox alignment="CENTER" spacing="20.0">
                  <children>
                     <VBox prefWidth="250.0" spacing="15.0">
                        <Button text="Register New Customer"
                                onAction="#handleRegisterCustomer"
                                styleClass="button"/>
                        <Button text="Manage Account Approvals"
                                onAction="#handleManageApprovals"
                                styleClass="button"/>
                     </VBox>

                     <VBox prefWidth="250.0" spacing="15.0">
                        <Button text="View Customers"
                                onAction="#handleViewCustomers"
                                styleClass="button"/>
                     </VBox>
                  </children>
               </HBox>
            </VBox>

            <!-- Logout -->
            <HBox alignment="CENTER">
               <Button text="Logout" onAction="#handleLogout" styleClass="button-transparent"/>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
