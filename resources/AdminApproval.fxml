<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.controllers.AdminApprovalController"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="@style.css"
            style="-fx-background-color: #fff3b0;">

    <children>

        <!-- Header -->
        <Pane prefHeight="60.0" prefWidth="900.0" styleClass="header">
            <children>
                <Text layoutX="300.0" layoutY="35.0"
                      text="Pending Account Approvals"
                      style="-fx-fill: #5D4037; -fx-font-weight: bold; -fx-font-size: 22px;"/>
            </children>
        </Pane>

        <!-- TableView -->
        <TableView fx:id="tblPendingAccounts"
                   layoutX="20.0" layoutY="80.0"
                   prefHeight="400.0" prefWidth="860.0"
                   style="-fx-background-color: white;
                          -fx-border-color: #D2B48C;
                          -fx-border-radius: 5;
                          -fx-background-radius: 5;">

            <columns>
                <TableColumn fx:id="colAccNo" text="Account No" prefWidth="90"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colCustomer" text="Customer ID" prefWidth="100"/>
                <TableColumn fx:id="colBalance" text="Balance" prefWidth="80"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>

                <!-- NEW COLUMNS -->
                <TableColumn fx:id="colReason" text="Reason" prefWidth="150"/>
                <TableColumn fx:id="colEmployer" text="Employer" prefWidth="120"/>
                <TableColumn fx:id="colDate" text="Requested On" prefWidth="120"/>

                <TableColumn fx:id="colActions" text="Actions" prefWidth="120"/>
            </columns>

        </TableView>

        <!-- Footer Buttons -->
        <HBox layoutX="340.0" layoutY="510.0" spacing="20.0">
            <children>
                <Button text="Refresh" onAction="#handleRefresh" styleClass="button"/>
                <Button text="Back" onAction="#handleBack" styleClass="button-transparent"/>
            </children>
        </HBox>

        <Label fx:id="lblFeedback"
               layoutX="50.0" layoutY="500.0"
               style="-fx-text-fill: red; -fx-font-weight: bold;"/>

    </children>

</AnchorPane>
