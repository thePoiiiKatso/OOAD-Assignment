<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="638.0" prefWidth="808.0" style="-fx-background-color: #fff3b0;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankingsystem.controllers.ViewAccountsController">

   <children>
      <!-- Header -->
      <Pane prefHeight="70.0" prefWidth="800.0" style="-fx-background-color: #D2B48C;                    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);">
         <children>
            <Text fill="#5D4037" layoutX="250.0" layoutY="40.0" text="Lekgwere Banking System">
               <font>
                  <Font name="Segoe UI Bold" size="20.0" />
               </font>
            </Text>
            <Button layoutX="700.0" layoutY="20.0" onAction="#handleBack" style="-fx-background-color: transparent;                            -fx-text-fill: #5D4037;                            -fx-border-color: #5D4037;                            -fx-border-radius: 5;                            -fx-background-radius: 5;                            -fx-pref-width: 70;                            -fx-pref-height: 30;" text="Back" />
            <ImageView fitHeight="80.0" fitWidth="90.0" layoutX="496.0" layoutY="-7.0" preserveRatio="true">
               <image>
                  <Image url="@../Icons/sunset-.png" />
               </image>
            </ImageView>
         </children>
      </Pane>

      <!-- Main Content -->
      <HBox layoutX="40.0" layoutY="90.0" prefWidth="720.0" spacing="30.0">
         <children>
            <!-- Left Side - Account List -->
            <VBox prefWidth="350.0" spacing="20.0">
               <children>
                  <Text fill="#5D4037" style="-fx-font-weight: bold;" text="Your Accounts">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </Text>

                  <!-- Accounts Container -->
                  <VBox spacing="15.0" style="-fx-background-color: rgba(210, 180, 140, 0.3);                                -fx-background-radius: 10;                                -fx-padding: 20;                                -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                     <children>
                        <!-- Savings Account -->
                        <HBox spacing="15.0" style="-fx-background-color: white;                                      -fx-background-radius: 8;                                      -fx-padding: 15;                                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
                           <children>
                              <VBox spacing="5.0">
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Savings Account" />
                                 <Label fx:id="lblSavingsBalance" style="-fx-text-fill: #2E8B57; -fx-font-weight: bold;" text="P 0.00" />
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-size: 12px;" text="Account No: **** 1234" />
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Investors Account -->
                        <HBox spacing="15.0" style="-fx-background-color: white;                                      -fx-background-radius: 8;                                      -fx-padding: 15;                                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
                           <children>
                              <VBox spacing="5.0">
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Investors Account" />
                                 <Label fx:id="lblInvestorsBalance" style="-fx-text-fill: #2E8B57; -fx-font-weight: bold;" text="P 0.00" />
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-size: 12px;" text="Account No: **** 5678" />
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Cheque Account -->
                        <HBox spacing="15.0" style="-fx-background-color: white;                                      -fx-background-radius: 8;                                      -fx-padding: 15;                                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
                           <children>
                              <VBox spacing="5.0">
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Cheque Account" />
                                 <Label fx:id="lblChequeBalance" style="-fx-text-fill: #2E8B57; -fx-font-weight: bold;" text="P 0.00" />
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-size: 12px;" text="Account No: **** 9012" />
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Total Balance -->
                        <HBox spacing="15.0" style="-fx-background-color: #D2B48C;                                      -fx-background-radius: 8;                                      -fx-padding: 15;                                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
                           <children>
                              <VBox spacing="5.0">
                                 <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Total Balance" />
                                 <Label fx:id="lblTotalBalance" style="-fx-text-fill: #5D4037;                                                -fx-font-size: 18px;                                                -fx-font-weight: bold;" text="P 0.00" />
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>

            <!-- Right Side - Transfer Funds -->
            <VBox prefWidth="350.0" spacing="20.0">
               <children>
                  <Text fill="#5D4037" style="-fx-font-weight: bold;" text="Transfer Funds">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </Text>

                  <!-- Transfer Form -->
                  <VBox spacing="15.0" style="-fx-background-color: rgba(210, 180, 140, 0.3);                                -fx-background-radius: 10;                                -fx-padding: 20;                                -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                     <children>
                        <VBox spacing="5.0">
                           <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="From Account:" />
                           <ComboBox fx:id="comboAccountFrom" prefHeight="35.0" prefWidth="300.0" promptText="Select source account" style="-fx-background-color: white;                                             -fx-border-color: #D2B48C;                                             -fx-border-radius: 5;                                             -fx-background-radius: 5;" />
                           <Label fx:id="lblFromBalance" style="-fx-text-fill: #5D4037; -fx-font-size: 12px;" text="Balance: P 0.00" />
                        </VBox>

                        <VBox spacing="5.0">
                           <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="To Account:" />
                           <ComboBox fx:id="comboAccountTo" prefHeight="35.0" prefWidth="300.0" promptText="Select destination account" style="-fx-background-color: white;                                             -fx-border-color: #D2B48C;                                             -fx-border-radius: 5;                                             -fx-background-radius: 5;" />
                        </VBox>

                        <VBox spacing="5.0">
                           <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Amount (P):" />
                           <TextField fx:id="txtTransferAmount" prefHeight="35.0" prefWidth="300.0" promptText="Enter amount to transfer" style="-fx-background-color: white;                                              -fx-border-color: #D2B48C;                                              -fx-border-radius: 5;                                              -fx-background-radius: 5;" />
                        </VBox>

                        <Button onAction="#handleTransfer" style="-fx-background-color: #D2B48C;                                        -fx-text-fill: #5D4037;                                        -fx-font-weight: bold;                                        -fx-background-radius: 8;                                        -fx-pref-width: 150;                                        -fx-pref-height: 40;                                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" text="Transfer Funds" />
                     </children>
                  </VBox>

                  <!-- Quick Actions -->
                  <VBox spacing="10.0">
                     <Label style="-fx-text-fill: #5D4037;                                    -fx-font-weight: bold;                                    -fx-font-size: 16px;" text="Quick Actions" />
                     <HBox spacing="10.0">
                        <Button style="-fx-background-color: #D2B48C;                                        -fx-text-fill: #5D4037;                                        -fx-font-weight: bold;                                        -fx-background-radius: 5;                                        -fx-pref-width: 80;                                        -fx-pref-height: 35;" text="Deposit" />
                        <Button style="-fx-background-color: #D2B48C;                                        -fx-text-fill: #5D4037;                                        -fx-font-weight: bold;                                        -fx-background-radius: 5;                                        -fx-pref-width: 80;                                        -fx-pref-height: 35;" text="Withdraw" />
                        <Button style="-fx-background-color: #D2B48C;                                        -fx-text-fill: #5D4037;                                        -fx-font-weight: bold;                                        -fx-background-radius: 5;                                        -fx-pref-width: 80;                                        -fx-pref-height: 35;" text="Statement" />
                     </HBox>
                  </VBox>

                  <Label fx:id="lblFeedback" prefWidth="300" style="-fx-text-fill: #5D4037;                                 -fx-font-weight: bold;                                 -fx-alignment: center;" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
