<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.controllers.RegisterCustomerController"
            style="-fx-background-color: #fff3b0;"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0">

    <children>

        <!-- Header -->
        <Pane prefHeight="70.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              style="-fx-background-color: #D2B48C;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);">
            <children>
                <Text fill="#5D4037" layoutX="270.0" layoutY="42.0"
                      text="Register New Customer">
                    <font>
                        <Font name="Segoe UI Bold" size="20.0" />
                    </font>
                </Text>
                <Button layoutX="700.0" layoutY="20.0"
                        text="Back" onAction="#handleBack"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #5D4037;
                               -fx-border-color: #5D4037;
                               -fx-border-radius: 5;
                               -fx-background-radius: 5;
                               -fx-pref-width: 70;
                               -fx-pref-height: 30;" />
            </children>
        </Pane>

        <!-- Scrollable Main Form (so long forms never get cut off) -->
        <ScrollPane fitToWidth="true"
                    AnchorPane.topAnchor="80.0"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="25.0"
                      alignment="TOP_CENTER"
                      style="-fx-padding: 30 60;">
                    <children>

                        <Text fill="#5D4037" style="-fx-font-weight: bold;"
                              text="Customer Registration">
                            <font>
                                <Font name="Segoe UI" size="24.0" />
                            </font>
                        </Text>

                        <!-- Personal Details Section -->
                        <VBox spacing="15.0" prefWidth="600.0" alignment="CENTER_LEFT">
                            <Label style="-fx-text-fill: #5D4037;
                                          -fx-font-weight: bold;
                                          -fx-font-size: 16px;"
                                   text="Personal Details" />

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <VBox prefWidth="120.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Title:" />
                                    <ComboBox fx:id="cmbTitle" prefHeight="35.0" prefWidth="120.0"
                                              promptText="Select Title"
                                              style="-fx-background-color: white;
                                                     -fx-border-color: #D2B48C;
                                                     -fx-border-radius: 5;
                                                     -fx-background-radius: 5;" />
                                </VBox>

                                <VBox prefWidth="330.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Customer ID:" />
                                    <TextField fx:id="txtCustomerId" prefHeight="35.0" prefWidth="330.0"
                                               promptText="Auto-generated"
                                               editable="false"
                                               style="-fx-background-color: #f5f5f5;
                                                      -fx-border-color: #D2B48C;
                                                      -fx-border-radius: 5;
                                                      -fx-background-radius: 5;" />
                                </VBox>
                            </HBox>

                            <HBox spacing="15.0">
                                <VBox prefWidth="225.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="First Name:" />
                                    <TextField fx:id="txtFirstName" prefHeight="35.0" prefWidth="225.0"
                                               promptText="First name"
                                               style="-fx-background-color: white;
                                                      -fx-border-color: #D2B48C;
                                                      -fx-border-radius: 5;
                                                      -fx-background-radius: 5;" />
                                </VBox>

                                <VBox prefWidth="225.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Surname:" />
                                    <TextField fx:id="txtSurname" prefHeight="35.0" prefWidth="225.0"
                                               promptText="Surname"
                                               style="-fx-background-color: white;
                                                      -fx-border-color: #D2B48C;
                                                      -fx-border-radius: 5;
                                                      -fx-background-radius: 5;" />
                                </VBox>
                            </HBox>

                            <VBox spacing="5.0">
                                <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Address:" />
                                <TextField fx:id="txtAddress" prefHeight="35.0" prefWidth="500.0"
                                           promptText="Full residential address"
                                           style="-fx-background-color: white;
                                                  -fx-border-color: #D2B48C;
                                                  -fx-border-radius: 5;
                                                  -fx-background-radius: 5;" />
                            </VBox>
                        </VBox>

                        <!-- Account Details Section -->
                        <VBox spacing="20.0"
                              style="-fx-background-color: rgba(210,180,140,0.3);
                                     -fx-background-radius: 10;
                                     -fx-padding: 25;
                                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <Label style="-fx-text-fill: #5D4037;
                                          -fx-font-weight: bold;
                                          -fx-font-size: 16px;"
                                   text="Account Details" />

                            <VBox spacing="5.0">
                                <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Username:" />
                                <TextField fx:id="txtUsername" prefHeight="35.0" prefWidth="450.0"
                                           promptText="Choose username for login"
                                           style="-fx-background-color: white;
                                                  -fx-border-color: #D2B48C;
                                                  -fx-border-radius: 5;
                                                  -fx-background-radius: 5;" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Password:" />
                                <PasswordField fx:id="txtPassword" prefHeight="35.0" prefWidth="450.0"
                                               promptText="Set secure password"
                                               style="-fx-background-color: white;
                                                      -fx-border-color: #D2B48C;
                                                      -fx-border-radius: 5;
                                                      -fx-background-radius: 5;" />
                            </VBox>

                            <HBox spacing="15.0">
                                <VBox prefWidth="225.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Account Type:" />
                                    <ComboBox fx:id="cmbAccountType" prefHeight="35.0" prefWidth="225.0"
                                              promptText="Select Type"
                                              style="-fx-background-color: white;
                                                     -fx-border-color: #D2B48C;
                                                     -fx-border-radius: 5;
                                                     -fx-background-radius: 5;" />
                                </VBox>

                                <VBox prefWidth="225.0" spacing="5.0">
                                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Initial Balance (P):" />
                                    <TextField fx:id="txtInitialBalance" prefHeight="35.0" prefWidth="225.0"
                                               promptText="0.00"
                                               style="-fx-background-color: white;
                                                      -fx-border-color: #D2B48C;
                                                      -fx-border-radius: 5;
                                                      -fx-background-radius: 5;" />
                                </VBox>
                            </HBox>
                        </VBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="15.0">
                            <Button fx:id="btnRegister" text="Register Customer" onAction="#handleRegister"
                                    style="-fx-background-color: #D2B48C;
                                           -fx-text-fill: #5D4037;
                                           -fx-font-weight: bold;
                                           -fx-background-radius: 8;
                                           -fx-pref-width: 150;
                                           -fx-pref-height: 40;
                                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" />
                            <Button text="Clear Form" onAction="#handleClear"
                                    style="-fx-background-color: transparent;
                                           -fx-text-fill: #5D4037;
                                           -fx-border-color: #5D4037;
                                           -fx-border-radius: 8;
                                           -fx-background-radius: 8;
                                           -fx-pref-width: 100;
                                           -fx-pref-height: 40;" />
                        </HBox>

                        <Label fx:id="lblFeedback"
                               prefWidth="450"
                               style="-fx-text-fill: #5D4037;
                                      -fx-font-weight: bold;
                                      -fx-alignment: center;" />

                    </children>
                </VBox>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>
