<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #fff3b0;"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.controllers.DashboardController">

    <children>

        <!-- Header -->
        <Pane prefHeight="80.0" prefWidth="900.0" styleClass="header">
            <children>
                <Text layoutX="339.0" layoutY="47.0" styleClass="header-text"
                      text="Lekgwere Banking System"/>
                <ImageView fitHeight="80.0" fitWidth="90.0" layoutX="570.0" layoutY="0.0" preserveRatio="true">
                    <image>
                        <Image url="@../Icons/sunset-.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>

        <!-- Sidebar -->
        <Pane layoutY="80.0" prefHeight="520.0" prefWidth="220.0"
              style="-fx-background-color: #bcaa7a;">
            <children>
                <VBox layoutX="10.0" layoutY="20.0" spacing="15.0">
                    <Button onAction="#handleMakePayments" styleClass="nav-button" text="Make Payments"/>
                    <Button onAction="#handleWithdraw" styleClass="nav-button" text="Withdraw"/>
                    <Button onAction="#handleDeposit" styleClass="nav-button" text="Deposit"/>
                    <Button onAction="#handleViewTransactions" styleClass="nav-button" text="View Transactions"/>
                    <Button onAction="#handleHelpDesk" styleClass="nav-button" text="Create Account"/>
                    <Button onAction="#handleViewAccounts" styleClass="nav-button" text="View Accounts"/>
                </VBox>
            </children>
        </Pane>

        <!-- Main Content -->
        <VBox layoutX="230.0" layoutY="100.0" prefWidth="650.0" spacing="25.0">

            <!-- Welcome -->
            <VBox spacing="5.0">
                <Label fx:id="lblWelcome"
                       style="-fx-text-fill: #5d4037; -fx-font-size: 24px; -fx-font-weight: bold;"
                       text="Welcome Back"/>
                <Label style="-fx-text-fill: #5d4037; -fx-opacity: 0.8;"
                       text="Manage your finances securely"/>
            </VBox>

            <!-- Balance Card -->
            <Pane prefHeight="120.0" prefWidth="640.0"
                  style="-fx-background-color: #d2b48c; -fx-background-radius: 15;">
                <children>
                    <ImageView fitHeight="95.0" fitWidth="117.0"
                               layoutX="50.0" layoutY="10.0" preserveRatio="true">
                        <image>
                            <Image url="@../Icons/profile-user.png"/>
                        </image>
                    </ImageView>

                    <Label fx:id="txtAccountType"
                           layoutX="200.0" layoutY="10.0"
                           style="-fx-text-fill: #5d4037; -fx-font-size: 14px;"
                           text="Account Type"/>

                    <Label layoutX="200.0" layoutY="40.0"
                           style="-fx-text-fill: #5d4037; -fx-font-weight: bold;"
                           text="Available Balance"/>

                    <Label fx:id="txtBalance"
                           layoutX="200.0" layoutY="75.0"
                           style="-fx-text-fill: #5d4037; -fx-font-size: 28px; -fx-font-weight: bold;"
                           text="P 0.00"/>
                </children>
            </Pane>

            <!-- Quick Actions -->
            <VBox spacing="10.0">
                <Label style="-fx-text-fill: #5d4037; -fx-font-size: 18px; -fx-font-weight: bold;"
                       text="Quick Actions"/>

                <HBox spacing="15.0">
                    <Button onAction="#handleFastDeposit" styleClass="action-button" text="Fast Deposit"/>
                    <Button onAction="#handleQuickTransfer" styleClass="action-button" text="Quick Transfer"/>
                    <Button onAction="#handlePayBills" styleClass="action-button" text="Pay Bills"/>

                    <!-- FIXED SPELLING HERE -->
                    <Button fx:id="btnSettings"
                            onAction="#handleSettings"
                            styleClass="action-button"
                            text="Settings"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Footer -->
        <Pane layoutY="560.0" prefHeight="40.0" prefWidth="900.0"
              style="-fx-background-color: #bcaa7a;">
            <HBox alignment="CENTER" layoutX="300.0" layoutY="10.0" spacing="20.0">
                <Label style="-fx-text-fill: #5d4037; -fx-font-size: 12px;"
                       text="Secure Banking System"/>
                <Button fx:id="btnLogoutCustomer"
                        onAction="#handleLogoutCustomer"
                        styleClass="button-transparent"
                        text="Logout"/>
            </HBox>
        </Pane>

    </children>
</AnchorPane>
